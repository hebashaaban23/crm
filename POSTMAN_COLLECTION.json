        {
          "name": "Main Page Buckets (10 each)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "sid={{session_sid}}; user_id={{user_id}}; full_name={{full_name}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/method/crm.api.mobile_api.main_page_buckets?min_each=10",
              "host": ["{{base_url}}"],
              "path": ["api", "method", "crm.api.mobile_api.main_page_buckets"],
              "query": [
                {
                  "key": "min_each",
                  "value": "10"
                }
              ]
            },
            "description": "Get tasks organized into buckets with minimum 10 tasks each."
          },
          "response": []
        }
      ],
      "description": "Specialized views for home screen and main page buckets"
    }
  ]
}

