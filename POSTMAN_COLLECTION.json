        {
          "name": "Filter Tasks - Pagination Example (Page 2)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "sid={{session_sid}}; user_id={{user_id}}; full_name={{full_name}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/method/crm.api.mobile_api.filter_tasks?limit=20&offset=20&order_by=modified desc",
              "host": ["{{base_url}}"],
              "path": ["api", "method", "crm.api.mobile_api.filter_tasks"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "offset",
                  "value": "20",
                  "description": "Skip first 20 results (page 2)"
                },
                {
                  "key": "order_by",
                  "value": "modified desc"
                }
              ]
            },
            "description": "Pagination example: Get page 2 (skip first 20 results)."
          },
          "response": []
        }
      ],
      "description": "Filter and search tasks with various parameters"
    },
    {
