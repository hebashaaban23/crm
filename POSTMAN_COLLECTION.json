        {
          "name": "Filter Tasks - By Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "sid={{session_sid}}; user_id={{user_id}}; full_name={{full_name}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/method/crm.api.mobile_api.filter_tasks?status=Todo,In Progress",
              "host": ["{{base_url}}"],
