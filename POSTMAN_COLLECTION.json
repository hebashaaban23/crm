              }
            ],
            "url": {
              "raw": "{{base_url}}/api/method/crm.api.mobile_api.filter_tasks?importance=High&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "method", "crm.api.mobile_api.filter_tasks"],
              "query": [
                {
                  "key": "importance",
                  "value": "High"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get high priority tasks only."
          },
          "response": []
